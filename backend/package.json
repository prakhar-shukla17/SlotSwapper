{
  "name": "slotswapper-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Backend for SlotSwapper - A peer-to-peer time-slot scheduling application",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint . --ext .js",
    "format": "prettier --write \"**/*.js\"",
    "prepare": "husky install"
